            <h1 class="cityheader cityheaderaccent">İNTERNETİN YENİ ÇAĞINA ADIM AT</h1>
            <button onclick="location.href = '/beta';" type="button" value="Beta'ya katil" class="joinbeta">BETAYA KATIL</button>
        </div>
        <div>
            <img src="/img/sun.png" class="cityvector">
        </div>
    </div>

    <div class="buildings">
        <img src="/img/city.png" class="buildingsvector">
    </div>
